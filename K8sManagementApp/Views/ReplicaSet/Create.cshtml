@using k8s.Models
@model V1ReplicaSet

@{
    ViewData["Title"] = "Create ReplicaSet";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Metadata.Name" class="control-label"></label>
        <input asp-for="Metadata.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Spec.Replicas" class="control-label"></label>
        <input asp-for="Spec.Replicas" class="form-control" />
    </div>
    <button type="submit" class="btn btn-default">Create</button>
</form>