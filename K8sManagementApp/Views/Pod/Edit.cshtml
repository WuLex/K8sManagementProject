@using k8s.Models
@model V1Pod

<!-- 编辑 Pod 表单 -->
<form class="layui-form" method="post">
    <div class="layui-form-item">
        <label class="layui-form-label">名称</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" asp-for="Metadata.Name" required readonly>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">命名空间</label>
        <div class="layui-input-block">
            <input type="text" class="layui-input" asp-for="Metadata.NamespaceProperty" required readonly>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="formSubmit">提交</button>
            <a class="layui-btn layui-btn-primary" href="/Pod/Index">返回</a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        // Layui 表单提交
        layui.use('form', function () {
            var form = layui.form;

            // 监听提交事件
            form.on('submit(formSubmit)', function (data) {
                // 提交表单
                $("form").submit();
                return false;
            });
        });
    </script>
}