@using k8s.Models
@model V1NetworkPolicy

<h1>Create Network Policy</h1>

<form asp-action="Create">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Metadata.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pod Selector</label>
        <input asp-for="Spec.PodSelector.MatchLabels" class="form-control" />
    </div>
    <div class="form-group">
        <label>Policy</label>
        <select asp-for="Spec.PolicyTypes" class="form-control">
            <option value="Ingress">Ingress</option>
            <option value="Egress">Egress</option>
            <option value="Ingress,Egress">Ingress and Egress</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>